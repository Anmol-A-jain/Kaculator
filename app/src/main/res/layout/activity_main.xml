<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".30"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2">

                <TextView
                    android:id="@+id/operator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:layout_weight=".10" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight=".10"
                    android:gravity="end"
                    android:textSize="30sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight=".80"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <Button
                    android:textColor="#ff0000"
                    android:id="@+id/Clearall"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".66"
                    android:text="C"
                    android:background="#eff0f1"
                    android:textSize="30sp" />

                <Button
                    android:textColor="#51b8f3"
                    android:background="#eff0f1"
                    android:id="@+id/per"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="%"
                    android:textSize="30sp" />

                <Button
                    android:background="#eff0f1"
                    android:id="@+id/plusMinsign"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="+/-"
                    android:textColor="#51b8f3"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B7"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="7"
                    android:textSize="30sp" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B8"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="8"
                    android:textSize="30sp" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="9"
                    android:textSize="30sp" />

                <Button
                    android:background="#eff0f1"
                    android:id="@+id/divide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="/"
                    android:textColor="#51b8f3"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="4"
                    android:textSize="30sp" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="5"
                    android:textSize="30sp" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="6"
                    android:textSize="30sp" />

                <Button
                    android:textColor="#51b8f3"
                    android:background="#eff0f1"
                    android:id="@+id/multi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="x"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="1"
                    android:textSize="30sp" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="2"
                    android:textSize="30sp" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="3"
                    android:textSize="30sp" />

                <Button
                    android:textColor="#51b8f3"
                    android:background="#eff0f1"
                    android:id="@+id/subtract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="-"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <Button
                    android:background="#ffffff"
                    android:id="@+id/dot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="."
                    android:textSize="30sp" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/B0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="0"
                    android:textSize="30sp" />

                <Button
                    android:background="#ffffff"
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:paddingBottom="30dp"
                    android:text="\u27F5"
                    android:textSize="24sp" />

                <Button
                    android:background="#eff0f1"
                    android:id="@+id/plus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:text="+"
                    android:textColor="#51b8f3"
                    android:textSize="30sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <Button
                    android:background="#1692e1"
                    android:id="@+id/equal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textColor="#ffffff"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>